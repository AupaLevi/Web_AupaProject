@{
    ViewBag.Title = "Home Page";
}
@model AupaWeb.Models.IndexModel

    <main role="main" class="container-fluid">
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-md-8 blog-main">
                <div id="carouselContent" class="carousel slide" data-ride="carousel" data-interval="2000">
                    <div class="carousel-inner" role="listbox">
                        @foreach (var eachCarouselData in Model.CarouselDataObjects)
                        {
                            if (eachCarouselData.Active)
                            {
                                <div class="carousel-item active text-center p-4">
                                    <p><a href="@eachCarouselData.Aaz03" target="_blank">@eachCarouselData.Aaz02</a></p>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item text-center p-4">
                                    <p><a href="@eachCarouselData.Aaz03" target="_blank">@eachCarouselData.Aaz02</a></p>
                                </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <h3 class="pb-3 mb-4 font-italic border-bottom">
                    歐帕快訊
                </h3>
                <div class="card gedf-card">
                    <div class="card-header">
                        <h4>Latest News</h4>
                    </div>
                    <div class="card-body">
                        <ul class="timeline">
                            @foreach (var eachPostData in Model.PostDataObjects)
                            {
                                <li>
                                    <a href="#">@eachPostData.Aaa06</a>
                                    <a href="#" class="float-right">@eachPostData.Aaa04</a>
                                    <p>@Html.Raw(@eachPostData.Aaa07)</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <aside class="col-md-4 blog-sidebar">
                <div class="p-3 mb-3 bg-light rounded">
                    <h4 class="font-italic">公告事項</h4>
                    <p class="mb-0"> <em></em> </p>
                </div>

                <div class="p-3">
                    <h4 class="font-italic">其他連結</h4>
                    <ol class="list-unstyled">
                    </ol>
                </div>

                <div class="p-3">
                    <h4 class="font-italic">Archives</h4>
                    <ol class="list-unstyled mb-0">
                    </ol>
                </div>

            </aside><!-- /.blog-sidebar -->
        </div>
    </main>