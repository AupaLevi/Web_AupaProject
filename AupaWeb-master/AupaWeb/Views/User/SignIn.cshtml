
@{
    ViewBag.Title = "Signin";
}

@model AupaWeb.Models.UserBasicObject
<br />
<br />
<br />
<body class="text-center" >
    <div class="form-bg">
       
            <div class="container">
                <div class="row">
                    <div class="form-container">
                        @using (Html.BeginForm("Sign_In", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <img class="mb-4" src="~/Content/image/aupa.jpg" alt="" width="170" height="100">
                            <h3 class="title">公告新增 - 請登入 </h3>
                            <div class="form-group">
                                <label for="inputEmail" class="sr-only">User Name</label>
                                @Html.TextBoxFor(model => model.Aba01, new { @class = "form-control", placeholder = "Account", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="sr-only">Password</label>
                                @Html.TextBoxFor(model => model.Aba03, new { @class = "form-control", type = "password", placeholder = "Password", @required = "required" })
                            </div>
                            <br />
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" value="remember-me"> 記住我
                                </label>
                            </div>
                            <button class="btn signin">登入</button>
                            <button type="button" class="btn btn-lg btn-primary btn-block" onclick="history.go(-1)">取消</button>
                            <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    
</body>
